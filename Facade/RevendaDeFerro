package facadeExemplo;

public class RevendaDeFerro implements GerenciarExportacoes{

	@Override
	public void ListaDeProdutos() {
		// TODO Auto-generated method stub
		System.out.println("\n\nLista de Produtos:");
		System.out.println("Cantoneira de Ferro - R$95,00");
		System.out.println("Chapa de Aço - R$100,00");
	}

	@Override
	public void PrecoPedido() {
		// TODO Auto-generated method stub
		System.out.println("\n\nPreço do Pedido:");
		System.out.println("O pedido é de: R$295,00");
	}

	@Override
	public void LocalLoja() {
		// TODO Auto-generated method stub
		System.out.println("\n\nLocalização da Loja");
		System.out.println("Centro Histórico - Porto Alegre");
	}


}
